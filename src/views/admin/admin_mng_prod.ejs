            console.log("totalpage : ", totalPage)
            // pageBtn = document.querySelectorAll(".paging");
            console.log("Btn : ", pageBtn)
            fetch(`/admin/mng_get_prod_search_list?page=${page}&`)
            .then(res => res.json())
            .then(data => {
                //현재 페이지를 다른함수에서 사용할 수 있도록 설정
                curPage = page;

