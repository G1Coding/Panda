        }


        function aftList() {
            curPage ++;
            getList(curPage);
        }

        function befList() {
            curPage --;
            getList(curPage);
        }
        
        function aftSearchList() {
            curPage ++;
            getSearchList(curPage, totalPage);
        }
        function befSearchList() {
            curPage --;
            getSearchList(curPage, totalPage);
        }






        function getList(page) {
